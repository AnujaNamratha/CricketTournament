<h2 class="p-4">Score Board</h2>

<table class="table p-3 table-bordered table-success table-striped border-primary">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Country</th>
      <th scope="col">No. Of Wins</th>
      <th scope="col">No. Of Loss</th>
       <th scope="col">No. Of Draws</th>
      <th scope="col">Team Rank</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
      <tr>
        <td>{{this.country_name}}</td>
        <td>{{this.no_of_wins}}</td>
        <td>{{this.no_of_loss}}</td>
        <td>{{this.no_of_draws}}</td>
        <td>{{this.team_rank}}</td>

      </tr>
    {{/each}}

  </tbody>
</table>