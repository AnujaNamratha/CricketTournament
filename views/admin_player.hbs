    >Delete Team</button></a> --}}
    


<div class="p-3">
<table class="table table-bordered table-success table-striped border-primary">
  <thead class="thead-dark">
    <tr>
      <th scope="col">PlayerId</th>
      <th scope="col">Name</th>
      <th scope="col">No. Of T20</th>
      <th scope="col">No. Of ODI</th>
      <th scope="col">No. Of Test</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
      <tr>
        <th scope="row">{{this.player_id}}</th>
        <td>{{this.pname}}</td>
        <td>{{this.no_of_t20}}</td>
        <td>{{this.no_of_odi}}</td>
        <td>{{this.no_of_test}}</td>
        <td class="text-center"><a href="/edit_player/{{this.player_id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i> Edit</a> </td>

        
      </tr>
    {{/each}}

  </tbody>
</table>

