<table class="table table-bordered table-success table-striped border-primary">
  <thead class="thead-dark">
    <tr>
      <th scope="col">TeamId</th>
      <th scope="col">Country</th>
      <th scope="col">No. Of Batsmen</th>
      <th scope="col">No. Of Bowlers</th>
