      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
      <tr>
        <th scope="row">{{this.team_id}}</th>
        <td>{{this.country_name}}</td>
        <td>{{this.no_of_batsmen}}</td>
        <td>{{this.no_of_bowlers}}</td>
        <td>{{this.team_rank}}</td>
        <td class="text-center"><a href="/admin_player/{{this.team_id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i> Edit Team</a> </td>
      </tr>
    {{/each}}

  </tbody>
