<div class="registerform p-5 m-5 ">
    {{#if message}}
    <h4 class="alert mt-4">{{message}}</h4>
    {{/if}}
    <div class="card" style="width: 18rem;">
        <div class="card-header text-center p-3" style="font-size: x-large;">
            <b>Register Form</b>
        </div>
        <div class="card-body">
            <form action="/register" method="post" >
                <div class="form-group p-3">
                    <label for="name"><b>Name</label>
                    <input type="name" class="form-control" id="name"  placeholder="Enter Name" name="username" >
                </div>

                <div class="form-group p-3">
                    <label for="email">Email Adress</label>
                    <input type="email" class="form-control" id="email" placeholder="Email" name="email">
                </div>

                <div class="form-group p-3">
                    <label for="password">Password</b></label>
                    <input type="password" class="form-control" id="password" placeholder="Password" name="password">
                </div>

                <div class="form-group p-3">
                    <label for="passwordConfirm"> Confirm Password</b></label>
                    <input type="password" class="form-control" id="passwordConfirm" placeholder="Re-Enter Password" name="passwordConfirm">
                </div>
                
                <button type="submit" class="btn btn-primary text-center">Register</button>
            </form>
        </div>
    </div>
    
</div>


